<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_11"
    tools:context=".DangKy">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="ĐĂNG Ký "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/matkhau" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Đăng Ký"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="40dp" />




    <EditText

        android:id="@+id/Ten"
        android:layout_width="300dp"
        android:layout_height="60dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ten"
        android:drawablePadding="20dp"
        android:hint="Nhập Tên của bạn"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ho"
        app:layout_constraintVertical_bias="0.017" />

    <EditText
        android:id="@+id/Ho"
        android:layout_width="300dp"
        android:layout_height="60dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/nguoi"
        android:drawablePadding="20dp"
        android:hint="Nhập Họ của bạn"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="300dp"
        android:layout_height="60dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="20dp"
        android:hint="Email"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sodienthoai"
        app:layout_constraintVertical_bias="0.018" />

    <EditText
        android:id="@+id/sodienthoai"
        android:layout_width="300dp"
        android:layout_height="60dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/outline_settings_phone_24"
        android:drawablePadding="20dp"
        android:hint="Số điện thoại"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ten"
        app:layout_constraintVertical_bias="0.015" />

    <EditText
        android:id="@+id/matkhau"
        android:layout_width="300dp"
        android:layout_height="60dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/pass"
        android:drawablePadding="20dp"
        android:hint="Mật Khẩu"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email"
        app:layout_constraintVertical_bias="0.023" />


</androidx.constraintlayout.widget.ConstraintLayout>